{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js TypeScript Config",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "tailwind.config.*",
    "playwright.config.*",
    "scripts/**/*",
    "*.config.*"
  ]
}
