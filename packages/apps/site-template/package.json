{
  "name": "project-development-environment--daysi-ui",
  "version": "1.0.0",
  "packageManager": "pnpm@10.12.4",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:type-check": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "cz": "czg"
  },
  "dependencies": {
    "@monorepo/styles": "workspace:*",
    "@monorepo/vite-config": "workspace:^",
    "@shared/tailwind-config": "workspace:*",
    "axios": "^1.10.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.356",
    "@monorepo/typescript-config": "workspace:*",
    "@monorepo/vitest-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "jsdom": "^25.0.1",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.1.10"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./cz-config.js"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "eslint --ext .js,.vue,.ts .",
      "vitest run --reporter=verbose --run"
    ]
  }
}
